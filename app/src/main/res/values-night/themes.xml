<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>

        <item name="material_dialog_background">@color/bgBoxColor</item>
        <item name="material_dialog_title_text_color">@color/headingNormalTextColor</item>
        <item name="material_dialog_message_text_color">@color/headingNormalTextColor</item>
        <item name="material_dialog_positive_button_color">@color/colorAccent</item>
        <item name="material_dialog_positive_button_text_color">@color/headingNormalTextColor</item>
        <item name="material_dialog_negative_button_text_color">@color/colorAccent</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>